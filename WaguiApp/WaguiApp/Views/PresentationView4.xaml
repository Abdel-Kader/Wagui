<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaguiApp.Views.PresentationView4"
             BackgroundImage="presentation4.jpg"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand" Padding="20, 150, 20, 30" Spacing="0">
                <Label Text="En vous permettant d'investir dans un projet sûr"
                       TextColor="#fff"
                       FontSize="30"
                       Margin="0,0,0,40"/>

                <Button 
                    BackgroundColor="#fff"
                    TextColor="#00cc99"
                    Text="Suivant"
                    FontAttributes="Bold"
                    FontSize="20"
                    BorderRadius="30"
                    Clicked="Presentation5"
                    Margin="60,90,60,30"
                    Image="droite.png"
                    ContentLayout="Right, 20"
                    
                />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>