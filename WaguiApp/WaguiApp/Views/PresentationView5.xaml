<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WaguiApp.Views.PresentationView5"
             BackgroundImage="presentation5.jpg"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout HorizontalOptions="FillAndExpand" Padding="20,90,30,20" Spacing="10">
                <Label Text="Wagui" FontAttributes="Bold" HorizontalOptions="Center" FontSize="40" TextColor="White"/>

                <Label Text="Exploitez vous-même la puissance du réseau wagui, comme beaucoup l'ont déjà fait avant vous"
                    TextColor="#fff"
                       FontSize="25"
                       Margin="0,0,0,20"/>
                <Button 
                    BackgroundColor="#fff"
                    TextColor="#00cc99"
                    Text="Je me lance"
                    FontAttributes="Bold"
                    FontSize="20"
                    BorderRadius="30"
                    Margin="60,90,60,30"
                    Clicked="Inscription" 
                    Image="droite.png"
                    ContentLayout="Right, 20"
                />

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>